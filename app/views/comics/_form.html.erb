<%= form_for :comic, url: comics_path, method: :post, data: { 'turbo-frame': 'comics' } do |f| %>
  <fieldset>
    <legend><%= t('.new') %></legend>
    <%= Comic.human_attribute_name(:name) %>: <%= f.text_field :name %><br />
    <%= Author.human_attribute_name(:name) %>: <%= collection_select(:comic, :author_id, Author.all, :id, :name, prompt: true) %><br />
    <%= f.submit %>
  </fieldset>
<% end %>
