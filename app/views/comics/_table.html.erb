<turbo-stream action="update" target="comics">
  <template>
    <table class="table table-striped caption-top">
      <caption>
        <h1><%= t('.caption') %></h1>
      </caption>
      <thead>
        <tr>
          <th>
            <%= Comic.human_attribute_name(:name) %>
          </th>
          <th>
            <%= Author.human_attribute_name(:name) %>
          </th>
          <th>
            <%= t('.functions') %>
          </th>
        </tr>
      </thead>
      <tbody id="comics_table">
        <% results.each do |comic| %>
          <tr id="<%= dom_id(comic) %>">
            <td>
              <%= comic.name %>
            </td>
            <td>
              <%= comic.author.name %>
            </td>
            <td>
              <%= link_to '🗑️', comic_url(comic), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }
              %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </template>
</turbo-stream>
